# Database
DATABASE_URL=postgresql+asyncpg://catalog_user:catalog_pass@localhost:5432/catalog_db

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API
API_V1_PREFIX=/api/v1
PROJECT_NAME=Product Catalog API
VERSION=0.1.0
DESCRIPTION=Product Catalog Service with configurable attributes

# CORS
ALLOWED_ORIGINS=["*"]

# Cache TTL (seconds)
CACHE_TTL_CATEGORIES=3600
CACHE_TTL_CATEGORY_TREE=1800
CACHE_TTL_PRODUCT_DETAILS=900
CACHE_TTL_SEARCH_RESULTS=300
CACHE_TTL_CATEGORY_ATTRIBUTES=3600

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Development
DEBUG=false
RELOAD=false

# Authentication
AUTH_ENABLED=true